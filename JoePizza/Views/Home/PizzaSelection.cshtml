@model IEnumerable<JoePizza.Models.Pizza>

@{ ViewData["Title"] = "PizzaSelection"; }

<h1>PizzaSelection</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <img src="@item.ImageUrl" width="75%" alt="@item.PizzaType" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price) K.d
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>

                <a id="@item.Id" asp-action="OrderCheckout" asp-route-id="@item.Id" class="btn btn-primary">Order</a>

            </td>
        </tr>
}
    </tbody>
</table>
